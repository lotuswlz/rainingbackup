<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/list_item_horizontal_padding"
    android:paddingRight="@dimen/list_item_horizontal_padding"
    android:paddingTop="@dimen/list_item_vertical_padding"
    android:paddingBottom="@dimen/list_item_vertical_padding"
    android:orientation="vertical"
    android:id="@+id/conversation_sms_view"
    tools:context="com.thoughtworks.cathywu.smsbackup.ui.ConversationDetailActivity">

    <ImageView
        android:id="@+id/sent_profile_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/self_profile_logo"
        android:contentDescription="@string/hello_world"
        android:layout_alignParentRight="true"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_sent_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/sent_profile_logo"
        android:layout_marginRight="5dp"
        android:padding="6dp"
        android:background="@drawable/sms_yellow_background"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_sent_sms_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_sent_message"
        android:layout_toLeftOf="@id/sent_profile_logo"
        android:layout_marginRight="5dp"
        android:gravity="right"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/received_profile_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/contact_profile_logo"
        android:contentDescription="@string/hello_world"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_received_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/received_profile_logo"
        android:layout_marginLeft="5dp"
        android:padding="6dp"
        android:background="@drawable/sms_blue_background"
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/tv_received_sms_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_received_message"
        android:layout_toRightOf="@id/received_profile_logo"
        android:layout_marginLeft="8dp"
        android:gravity="left"
        android:visibility="invisible"/>


</RelativeLayout>
